<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--Styling EditText and buttons -->
    <style name="InputField" parent="Widget.AppCompat.EditText">
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/edit_text_outline</item>
        <item name="android:textAppearance">@style/Text.Input</item>
        <item name="android:elevation">6dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
    </style>

    <style name="Text.Input" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?attr/colorControlActivated</item>
        <item name="android:textSize">15sp</item>
        <item name="android:elevation">6dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Button.Solid" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/button_solid_background</item>
        <item name="android:textAppearance">@style/Text.Input</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

</resources>